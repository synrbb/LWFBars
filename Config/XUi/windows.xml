<config>
  <set xpath="/windows/window[@name='windowToolbelt']/@pos">-376,88</set>
  <remove xpath="/windows/window[@name='windowToolbelt']/rect/sprite[@pos='0,6']"/>
  <remove xpath="/windows/window[@name='windowToolbelt']/rect/rect[@stat_type='Food']"/>
  <remove xpath="/windows/window[@name='windowToolbelt']/rect/rect[@stat_type='Water']"/>

  <set xpath="/windows/window[@name='HUDLeftStatBars']/rect[@side='right']/@pos">9,306</set>
  <set xpath="/windows/window[@name='HUDLeftStatBars']/rect[@side='right']/rect[@stat_type='Stamina']/@pos">0,-200</set>
  <set xpath="/windows/window[@name='HUDLeftStatBars']/rect[@side='right']/rect[@stat_type='Health']/@pos">0,-250</set>
  <set xpath="/windows/window[@name='HUDLeftStatBars']/rect[@side='left']/@pos">90,282</set>

  <insertBefore xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud']/rect[@stat_type='Stamina']">
    <rect width="171" height="46" pos="0,-50" controller="LWFBars.LevelBar, LWFBars" cursor_area="true">
      <sprite depth="1" name="border" color="0,0,0,128" type="sliced"/>

      <sprite depth="2" name="background" color="0,0,0,140" type="sliced"/>
      <filledsprite depth="3" name="background" color="110,110,110,128" width="169" type="filled" fill="1"/>

      <filledsprite depth="5" name="BarContent" color="{xpcolor}" width="169" type="filled" fill="{xp}"/>
      <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_trophy" size="35,35" pos="26,-24" pivot="center" foregroundlayer="true"/>
      <label depth="7" name="TextContent" pos="44,-23" font_size="32" color="[white]" justify="center" pivot="left" text="Lv {playerlevel}" width="125" height="35"/>
      <label depth="8" pos="26,-23" font_size="22" style="outline" justify="center" pivot="center" text="[FFB400]{skillpoints}[-]" visible="{skillpointsvisible}"/>

      <sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
      <filledsprite depth="8" name="background" color="0,0,0,255" width="171" fillcenter="false" type="filled" fill="1"/>
      <filledsprite depth="3" name="background" color="0,0,0,255" width="170" fillcenter="false" type="filled" fill="1"/>
    </rect>

    <rect width="171" height="46" pos="0,-100" controller="LWFBars.FoodWaterBar, LWFBars" stat_type="Water" visible="{statvisible}">
      <sprite depth="1" name="border" color="0,0,0,128" type="sliced"/>

      <sprite depth="2" name="background" color="0,0,0,140" type="sliced"/>
      <filledsprite depth="3" name="background" color="110,110,110,128" width="169" type="filled" fill="{statmodifiedmax}"/>

      <filledsprite depth="5" name="BarContent" color="0,173,216,128" width="169" type="filled" fill="0"/>
      <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_water" size="35,35" pos="26,-24" pivot="center" foregroundlayer="true"/>
      <label depth="7" name="TextContent" pos="44,-23" font_size="32" color="[white]" justify="center" pivot="left" text="{statcurrentwithmax}" width="125" height="35"/>

      <sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
      <filledsprite depth="8" name="background" color="0,0,0,255" width="171" fillcenter="false" type="filled" fill="{statmodifiedmax}"/>
      <filledsprite depth="3" name="background" color="0,0,0,255" width="170" fillcenter="false" type="filled" fill="{statmodifiedmax}"/>
    </rect>

    <rect width="171" height="46" pos="0,-150" controller="LWFBars.FoodWaterBar, LWFBars" stat_type="Food" visible="{statvisible}">
      <sprite depth="1" name="border" color="0,0,0,128" type="sliced"/>

      <sprite depth="2" name="background" color="0,0,0,140" type="sliced"/>
      <filledsprite depth="3" name="background" color="110,110,110,128" width="169" type="filled" fill="{statmodifiedmax}"/>

      <filledsprite depth="5" name="BarContent" color="0,255,54,128" width="169" type="filled" fill="0"/>
      <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_fork" size="35,35" pos="26,-24" pivot="center" foregroundlayer="true"/>
      <label depth="7" name="TextContent" pos="44,-23" font_size="32" color="[white]" justify="center" pivot="left" text="{statcurrentwithmax}" width="125" height="35"/>

      <sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
      <filledsprite depth="8" name="background" color="0,0,0,255" width="171" fillcenter="false" type="filled" fill="{statmodifiedmax}"/>
      <filledsprite depth="3" name="background" color="0,0,0,255" width="170" fillcenter="false" type="filled" fill="{statmodifiedmax}"/>
    </rect>
  </insertBefore>
</config>
